#!/bin/bash
# verify_examples.sh
# Verify all example proofs in examples/proofs/

set -e

echo "üîç Verifying DigitalMeve example proofs..."
echo

for proof in proofs/*.meve.json; do
  if [ -f "$proof" ]; then
    echo "‚û° Verifying $proof"
    digitalmeve verify "$proof"
    echo
  fi
done

echo "‚úÖ All proofs verified successfully."
